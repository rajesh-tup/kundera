<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="test-unit-1">
		<provider>com.impetus.kundera.ejb.KunderaPersistence</provider>
		
		<properties>
			<property name="kundera.nodes" value="localhost"/>
			<!-- property name="kundera.port" value="9160"/ -->
			<property name="kundera.keyspace" value="Blog"/>
			<property name="kundera.client" value="com.impetus.kundera.client.PelopsClient.class"/>
		</properties>
	</persistence-unit>

	<persistence-unit name="test-unit-2">
		<provider>com.impetus.kundera.ejb.KunderaPersistence</provider>
		
		<properties>
			<property name="kundera.nodes" value="localhost"/>
			<property name="kundera.port" value="9165"/>
			<property name="kundera.keyspace" value="Blog"/>
			<property name="kundera.client" value="com.impetus.kundera.client.PelopsClient.class"/>
		</properties>
	</persistence-unit>
</persistence>