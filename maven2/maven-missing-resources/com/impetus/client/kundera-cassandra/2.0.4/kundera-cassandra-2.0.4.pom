<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.impetus</groupId>
		<artifactId>kundera</artifactId>
		<version>2.0.4</version>
	</parent>

	<groupId>com.impetus.client</groupId>
	<artifactId>kundera-cassandra</artifactId>
	<packaging>jar</packaging>

	<name>kundera-cassandra</name>
	<url>http://maven.apache.org</url>


        <!-- Dependencies -->
	<dependencies>
		<dependency>
			<groupId>com.impetus.core</groupId>
			<artifactId>kundera-core</artifactId>
			<version>2.0.4</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cassandra</groupId>
			<artifactId>apache-cassandra</artifactId>
			<version>0.8.2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cassandra</groupId>
			<artifactId>apache-cassandra-thrift</artifactId>
			<version>0.8.2</version>
		</dependency>
		<dependency>
			<groupId>org.scale7</groupId>
			<artifactId>scale7-pelops</artifactId>
			<version>1.2-0.7.x-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.solr</groupId>
			<artifactId>solandra</artifactId>
			<version>UNKNOWN</version>
		</dependency>
		<dependency>
			<groupId>org.xerial</groupId>
			<artifactId>snappy</artifactId>
			<version>1.0.1-rc4</version>
		</dependency>
	</dependencies>
        
       <!-- Assembly build -->
       <build>
         <plugins>
            <plugin>
		<!-- NOTE: We don't need a groupId specification because the group is org.apache.maven.plugins ...which is assumed by default. -->
		<artifactId>maven-assembly-plugin</artifactId>
	 	<version>2.2.1</version>
		<configuration>
		   <descriptorRefs>
		     <descriptorRef>jar-with-dependencies</descriptorRef>
		   </descriptorRefs>
	        </configuration>
	    </plugin>
         </plugins>
       </build>

</project>
